cdef int evaluate(object board):
    cdef int score = 0
    cdef U64 bitboard
    cdef int piece, square

    for piece in range(k + 1):
        bitboard = board.bitboards[piece]

        while bitboard:
            square = get_ls1b_index(bitboard)

            # score material weights
            score += material_score[piece]

            # score piece position
            if piece == P:
                score += pawn_score[square]
            elif piece == N:
                score += knight_score[square]
            elif piece == B:
                score += bishop_score[square]
            elif piece == R:
                score += rook_score[square]
            elif piece == K:
                score += king_score[square]
            elif piece == p:
                score -= pawn_score[mirror_score[square]]
            elif piece == n:
                score -= knight_score[mirror_score[square]]
            elif piece == b:
                score -= bishop_score[mirror_score[square]]
            elif piece == r:
                score -= rook_score[mirror_score[square]]
            elif piece == k:
                score -= king_score[mirror_score[square]]

            bitboard = pop_bit(bitboard, square)

    return score if board.side == white else -score
